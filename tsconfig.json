{
    "compilerOptions": {
        "rootDir": "./src",
        "target": "ES2019",
        "baseUrl": "./",
        "module": "ES2015",
        "moduleResolution": "node",
        "lib": ["ES2019", "Dom", "DOM.Iterable"],
        "types": ["chrome"],
        "allowJs": true,
        "downlevelIteration": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "strictNullChecks": true,
        "noEmit": false,
        "skipLibCheck": true,
        "outDir": "./dist"
    }
}
